;; Gnome widget
(defwindow window_gnome_widget
  :monitor 0 
  :stacking "bg"
  :wm-ignore true
  :geometry (geometry :x "2%"
                      :y "8%"
                      :width "19%"
                      :height "70%"
                      :anchor "top left"
            )
  (widget_gnome_widget)
)

